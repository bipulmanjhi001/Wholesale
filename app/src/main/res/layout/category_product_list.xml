<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_marginBottom="2sp"
        android:layout_marginTop="2sp"
        android:background="@drawable/club"
        android:translationZ="2sp"
        android:orientation="horizontal"
        android:layout_height="70sp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/category_pro_image"
            android:layout_width="60sp"
            android:layout_marginLeft="10sp"
            android:layout_gravity="center"
            android:background="@drawable/ic_launcher_background2"
            android:layout_height="60sp"/>

        <TextView
            android:id="@+id/category_pro_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/category_pro_name"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:textStyle="bold"
            android:lines="2"
            android:textSize="14sp"
            android:singleLine="false" />

        <TextView
            android:id="@+id/category_pro_url"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

         <ImageView
             android:layout_width="40sp"
             android:layout_gravity="center"
             android:layout_marginRight="20sp"
             android:background="@drawable/ic_arrow_right"
             android:layout_height="40sp" />

    </LinearLayout>
</LinearLayout>
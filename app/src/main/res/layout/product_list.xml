<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120sp"
    android:layout_margin="10sp"
    android:background="@drawable/club"
    android:layout_height="120sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/_grid_item_image_pro"
                android:layout_width="60sp"
                android:layout_margin="10sp"
                android:layout_gravity="center"
                android:background="@drawable/ic_launcher_background2"
                android:layout_height="60sp"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/_grid_item_id_pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/_grid_item_title_pro"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        android:textStyle="bold"
        android:lines="2"
        android:textSize="12sp"
        android:singleLine="false" />

    <TextView
        android:id="@+id/_grid_item_url_pro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/profile_summery"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/list_img"
            android:layout_width="40sp"
            android:layout_margin="10sp"
            android:background="@color/colorPrimaryDark"
            android:layout_height="40sp" />

    <TextView
        android:id="@+id/total_listing"
        android:layout_width="match_parent"
        android:text="580 listing from 40 suppliers"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:layout_margin="10sp"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <ProgressBar
        android:layout_below="@+id/profile_summery"
        android:visibility="gone"
        android:id="@+id/profile_progressBar_added"
        android:layout_width="30dp"
        android:translationZ="2dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <ExpandableListView
        android:layout_below="@+id/profile_progressBar_added"
        android:id="@+id/profile_product_added_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
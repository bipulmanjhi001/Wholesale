<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.Proof">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/back_from_gst"
                    android:layout_width="30dp"
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="left"
                    android:background="@drawable/ic_arrow_back_black_24dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="4sp"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Select any one of the following documents"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="8sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Upload your documents for getting verification"
                android:layout_height="wrap_content" />

            </LinearLayout>

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="20sp"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/gst_c"
                android:layout_width="wrap_content"
                android:text="GST Certificate (Required)"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="20sp"
                android:textSize="12sp"
                android:text="Upload your GST Valid document image"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="20sp"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/shop_c"
                android:layout_width="wrap_content"
                android:text="Shop &amp; Establishment Licence"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="20sp"
                android:textSize="12sp"
                android:text="Upload your Establishment Licence document image"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="20sp"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/udhyog_c"
                android:layout_width="wrap_content"
                android:text="Udhyog Aadhaar"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="20sp"
                android:textSize="12sp"
                android:text="Upload your Valid Udhyog Aadhaar image"
                android:layout_height="wrap_content" />

        </LinearLayout>

        </LinearLayout>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_margin="20sp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:text="Terms and Conditions"
        android:layout_margin="20sp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/t_check"
        android:layout_width="match_parent"
        android:text="Terms of Use"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginBottom="20sp"
        android:textSize="14sp"
        android:text="By clicking Accept,you agree to wholesale factory terms of use."
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/l_check"
        android:layout_width="match_parent"
        android:text="Terms and Conditions for Logistics Service and Payment Service"
        android:layout_marginBottom="10sp"
        android:padding="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="30sp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginRight="40sp"
        android:text="By clicking Accept,you agree to wholesale factory terms for availing the Logistics Services and Payment."
        android:layout_marginLeft="40sp"
        android:layout_marginBottom="10sp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/CONFIRM_add"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="vertical"
        android:layout_margin="10sp"
        android:layout_gravity="center"
        android:focusable="true"
        android:gravity="center"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="match_parent"
            android:text="Allow"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
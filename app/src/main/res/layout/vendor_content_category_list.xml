<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="50dp"
    android:background="@color/white"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="wholesalefactory.co.main.Vendor_Profile_With_Products"
    tools:showIn="@layout/activity_vendor__profile__with__products">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/profile_lay"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:focusable="false"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_product_img"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_margin="10sp"
                        android:layout_gravity="center"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#2196F3"
                        android:src="@color/colorPrimaryDark" />

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/profile_product_shop_name"
                            android:layout_width="wrap_content"
                            android:text="SUPER KNIT"
                            android:layout_gravity="left"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="#0E0D0D"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/profile_product_name"
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/profile_product_location"
                            android:layout_width="wrap_content"
                            android:text="Ludhiana Punjab"
                            android:layout_gravity="left"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/profile_product_user_id"
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/Follow"
                        android:text="Follow"
                        android:textColor="#FFFFFF"
                        android:layout_weight="1"
                        android:layout_width="110sp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@drawable/submit_button"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:gravity="center"/>

                    </LinearLayout>
                </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:scrollbars="none"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:translationZ="2sp"
                            android:background="@drawable/profile_but"
                            android:layout_margin="10sp"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/pro_img"
                                android:layout_width="20sp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                app:civ_border_width="2dp"
                                app:civ_border_color="#FFFFFF"
                                android:fitsSystemWindows="true"
                                android:background="@drawable/ic_profle"
                                android:layout_height="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Profile"
                                android:layout_marginLeft="6sp"
                                android:layout_gravity="center"
                                android:textSize="10sp"
                                android:padding="5sp"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:layout_height="wrap_content" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:translationZ="2sp"
                            android:gravity="center"
                            android:background="@drawable/profile_but"
                            android:layout_margin="10sp"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                app:civ_border_width="2dp"
                                android:fitsSystemWindows="true"
                                app:civ_border_color="#FFFFFF"
                                android:background="@drawable/ic_money_bag"
                                android:padding="5sp" />

                            <TextView
                                android:id="@+id/min_qty"
                                android:layout_width="wrap_content"
                                android:text="\u20B9 500 min order "
                                android:layout_marginLeft="6sp"
                                android:textSize="10sp"
                                android:padding="5sp"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="wrap_content" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:translationZ="2sp"
                            android:gravity="center"
                            android:background="@drawable/profile_but"
                            android:layout_margin="10sp"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="20sp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="5sp"
                                app:civ_border_width="2dp"
                                app:civ_border_color="#FFFFFF"
                                android:fitsSystemWindows="true"
                                android:background="@drawable/ic_alarm_clock"
                                android:layout_height="20sp" />

                            <TextView
                                android:id="@+id/deivery_date"
                                android:layout_width="wrap_content"
                                android:text="Delivery in 10 to 12 days"
                                android:layout_marginLeft="6sp"
                                android:layout_gravity="center"
                                android:padding="5sp"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:translationZ="2sp"
                            android:background="@drawable/profile_but"
                            android:layout_margin="10sp"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="20sp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="5sp"
                                app:civ_border_width="2dp"
                                app:civ_border_color="#FFFFFF"
                                android:fitsSystemWindows="true"
                                android:background="@drawable/ic_percentage"
                                android:layout_height="20sp" />

                            <TextView
                                android:id="@+id/cust_repeat"
                                android:layout_width="wrap_content"
                                android:text="10 % customer repeat"
                                android:layout_marginLeft="6sp"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:textSize="10sp"
                                android:padding="5sp"
                                android:gravity="center"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressBar"
                android:layout_width="30dp"
                android:translationZ="2dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

        </LinearLayout>

        <wholesalefactory.co.model.ExpandableHeightGridView
            android:id="@+id/load_sub_category_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scrollbars="none"
            android:horizontalSpacing="10dp"
            android:isScrollContainer="false"
            android:numColumns="2"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

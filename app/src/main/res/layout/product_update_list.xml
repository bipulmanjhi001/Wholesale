<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="2sp"
        android:layout_marginTop="2sp"
        android:background="@drawable/club"
        android:translationZ="2sp"
        android:orientation="horizontal"
        android:layout_height="80sp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/_grid_item_image_"
                android:layout_width="60sp"
                android:layout_marginLeft="10sp"
                android:layout_gravity="center"
                android:background="@drawable/ic_launcher_background2"
                android:layout_height="60sp"/>

    <TextView
        android:id="@+id/_item_id_pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:layout_weight="1"
        android:id="@+id/_grid_item_title_name"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:visibility="visible"
        android:textStyle="bold"
        android:lines="2"
        android:textSize="12sp"
        android:singleLine="false" />

    <TextView
        android:id="@+id/_grid_item_url_pro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FF0707"
            android:textStyle="bold"
            android:padding="10sp"
            android:background="@drawable/select_button"
            android:gravity="end"
            android:layout_marginRight="10sp"
            android:text="Update / Edit"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>